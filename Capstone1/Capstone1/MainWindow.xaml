                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="EnterBox" HorizontalAlignment="Left" Height="71" Margin="401,28,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="106" RenderTransformOrigin="-0.457,1.027"/>

    </Grid>

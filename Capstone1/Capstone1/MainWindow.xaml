        <Button x:Name="ButtonPress" Content="press" HorizontalAlignment="Left" Margin="418,268,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.378,-1.54" Click="Button_Click"/>
        <RichTextBox x:Name="RichText" HorizontalAlignment="Left" Height="267" Margin="30,23,0,0" VerticalAlignment="Top" Width="366">
